<%= form_for :page, url: { action: "create", controller: "pages" } do |f| %>
  <%= f.hidden_field(:parent, value: @paged.id) %>
  <div class="field">
    <%= f.label :logical_number %><br>
    <%= f.text_field :logical_number %>
  </div>
  <div class="field">
    <%= f.label 'Previous page' %><br>
    <%= f.text_field :prev_sib %>
  </div>
  <div class="field">
    <%= f.label 'Next page' %><br>
    <%= f.text_field :next_sib %>
  </div>
  <div class='field'>
    <%= f.label 'Page image file:' %><br />
    <%= f.file_field :image_file %>
  </div>
  <div class='field'>
    <%= f.label 'New OCR file:' %>
    <%= f.file_field :ocr_file %>
  </div>
  <div class='field'>
    <%= f.label 'XML file:' %>
    <%= f.file_field :xml_file %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>