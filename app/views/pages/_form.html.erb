<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :logical_number %><br>
    <%= f.text_field :logical_number %>
  </div>
  <div class="field">
    <%= f.label :physical_number %><br>
    <%= f.text_field :physical_number %>
  </div>
  <div class='field'>
    <%= f.label 'Page image file:' %><br />
    <%= f.file_field :image_file %>
    <img alt='<%=  @page.image_datastream.label %>'
         src='<%=  ActiveFedora.fedora_config.credentials[:url] %>/<%=  @page.image_datastream.url %>'
         width='128' height='128' />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
